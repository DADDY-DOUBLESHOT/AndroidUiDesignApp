<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.nilprojects.androiduidesign">

    <dist:module dist:instant="true" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeMain">
        <activity android:name=".Activities.Ripple.Rippleeffect"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".Activities.ViewAnimation.MyActivity"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".Activities.ViewAnimation.ExampleActivity"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".Activities.FragmentNavAnim.MainActivityNavFrag"
            android:theme="@style/AppTheme">

        </activity>

        <activity
            android:name=".Activities.CardPreviewAnim.CardPreview"
            android:theme="@style/AppThemeNo" />
        <activity android:name=".Activities.ViewPagerTransformation.ViewPagerTransformation"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Activities.CreativeViewPager.CreativeViewPager"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Activities.BannerSlider.BannerSlider"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Activities.SmartiestImageSlider.SmartiestImageSlider"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Activities.ViewPagerTransformation.TransformationActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Activities.ViewPagerTransformation.CircularViewPager"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".Activities.FluidBottomNav.FluidBottomNav"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Activities.ReadableBottomBar.ReadableBottomNav"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".Activities.MeowBottomNav.MeowNavBottom"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.TapBarMenu.TapBarMenu"
            android:theme="@style/AppTheme" />

        <activity android:name=".Activities.SideMenu.MainActivitySideMenu"
            android:configChanges="orientation|screenSize" />

        <activity android:name=".Activities.ContextMenu.ContextMenu"
            android:configChanges="orientation|screenSize" />

        <activity android:name=".MainActivity">
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>